<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/titlegray"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/Btn_setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@color/titlegray"
            android:scaleType="centerInside"
            android:contentDescription=""
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text_title"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/titlegray"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:text="个人主页"
            android:textColor="@color/darkgray"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/Btn_massage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@color/titlegray"
            android:scaleType="centerInside"
            android:src="@drawable/massage"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >

        <com.example.wangjie.Page4.CircleImageView
            android:id="@+id/circleview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.example.wangjie.Page4.BorderTextView
                android:id="@+id/doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="3dp"
                android:textSize="15dp"
                android:textColor="@color/green"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.wangjie.Page4.BorderTextView1
                    android:id="@+id/doc_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingRight="18dp"
                    android:textSize="11dp"
                    android:textColor="@color/darkgray"
                    />

                <TextView
                    android:id="@+id/doc_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="18dp"
                    android:textSize="11dp"
                    android:textColor="@color/darkgray"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/doc_award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="11dp"
                android:textColor="@color/darkgray"
                android:text="查看个人表彰"
                />



        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-12dp"
        android:background="@color/titlegray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:text="评分情况"
        android:textSize="11dp"
        android:textColor="@color/darkgray"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_rate"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:overScrollMode="never"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:background="@color/titlegray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:text="评价留言"
        android:textSize="11dp"
        android:textColor="@color/darkgray"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="vertical" />


</LinearLayout>

