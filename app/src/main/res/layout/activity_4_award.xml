<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/titlegray"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/Btn_backhome"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@color/titlegray"
            android:scaleType="centerInside"
            android:src="@drawable/leftarray"
            />
        <TextView
            android:id="@+id/text_title"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/titlegray"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:text="表彰情况"
            android:textColor="@color/darkgray"
            android:textSize="15dp"/>
        <TextView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.example.wangjie.Page4.CircleImageView
            android:id="@+id/circleview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.example.wangjie.Page4.BorderTextView
                android:id="@+id/award_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="3dp"
                android:textSize="15dp"
                android:textColor="@color/green"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.wangjie.Page4.BorderTextView1
                    android:id="@+id/award_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingRight="18dp"
                    android:textSize="11dp"
                    android:textColor="@color/darkgray"
                    />

                <TextView
                    android:id="@+id/award_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="18dp"
                    android:textSize="11dp"
                    android:textColor="@color/darkgray"
                    />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-12dp"
        android:background="@color/titlegray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_award"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:scrollbars="vertical"
        android:overScrollMode="never"
        />

</LinearLayout>